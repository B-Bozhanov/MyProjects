@using RealEstate.Services.TranslateService.Models;
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section class="vh-100 bg-image"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form method="post" id="registerForm">

                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-outline mb-4">
                                    <label asp-for="FirstName" class="form-label" placeholder="John"></label>
                                    <input asp-for="FirstName" class="form-control form-control-lg" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label asp-for="LastName" class="form-label" placeholder="Smith"></label>
                                    <input asp-for="LastName" class="form-control form-control-lg" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label asp-for="Username" class="form-label" placeholder="JohnSmith"></label>
                                    <input asp-for="Username" class="form-control form-control-lg" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control form-control-lg" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label asp-for="ConfirmPassword" class="form-label"></label>
                                    <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="form-check d-flex justify-content-center mb-5">
                                    <input asp-for="IsTermsClicked" class="form-check-input me-2" id="Checkbox" />
                                    <label class="form-check-label">
                                        I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                                    </label>
                                    <span asp-validation-for="IsTermsClicked" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4" id="agencyName">
                                    <label asp-for="AgencyName" class="form-label"></label>
                                    <input asp-for="AgencyName" class="form-control form-control-lg" />
                                    <span asp-validation-for="AgencyName" class="text-danger"></span>
                                </div>

                                <div class="form-check d-flex justify-content-center mb-5">
                                    <input asp-for="IsAgent" class="form-check-input me-2"/>
                                    <label class="form-check-label">
                                        @this.translateService.TranslateTo(CurrentSystemLanguage, nameof(LanguageBase.IamAAgent))
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" disabled id="submitButton"
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                        Register
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Have already an account? <a asp-controller="Account" asp-action="Login"
                                                                class="fw-bold text-body"><u>Login here</u></a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/js/registerButtonDisabler.js"></script>
    <script src="~/js/agencyFormHider.js"></script>
}
