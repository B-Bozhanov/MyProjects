@model IEnumerable<PropertyViewModel>

@{
    ViewData["Title"] = "Search";
    PaginationModel paginationModel;
    paginationModel = this.ViewBag.Pager;
    //TODO: Images are not responsive !
}

<div class="container text-center">
    <div class="row">
        <div class="col-md-12 col-lg-8">
            <div class="title-single-box">
                <h1 class="title-single">Result - @Model.Count() properties</h1>
                <span class="color-text-a">Grid Properties</span>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-4">
            <button class="btn btn-outline-success" id="Search">@this.translateService.TranslateTo(CurrentSystemLanguage, nameof(BaseLanguage.Search))</button>
        </div>
    </div>
</div>
<div asp-validation-summary="All" class="text-danger"></div>
<section class="property-grid grid">
    <div class="container">
        <div class="row">
            <partial name="_PropertyViewPartial" model="@Model" />
        </div>
    </div>
    @if (Model.Count() != 0)
    {
        <partial name="_PaginationPartial" model="@paginationModel" />
    }
</section>
