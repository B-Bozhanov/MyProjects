@model BasePropertyModel

<h1 style="font-size:large">@this.translateService.TranslateTo(CurrentSystemLanguage, nameof(BaseLanguage.DetailInfo)) </h1>
<br />
<div class="row">
    <div class="col-3">
        <h1 style="font-size:large"><label>@this.translateService.TranslateTo(CurrentSystemLanguage, nameof(BaseLanguage.Size))</label></h1>
        <input asp-for="Size" class="form-control">
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>
    <div class="col-3">
        <h1 style="font-size:large"><label>@this.translateService.TranslateTo(CurrentSystemLanguage, nameof(BaseLanguage.Year))</label></h1>
        <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="col-3">
        <h1 style="font-size:large"><label>@this.translateService.TranslateTo(CurrentSystemLanguage, nameof(BaseLanguage.Floor))</label></h1>
        <select asp-for="Floor" class="form-select">
            @for (int? i = 0; i <= 100; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <br />
    </div>
    <div class="col-3">
        <h1 style="font-size:large"><label>@this.translateService.TranslateTo(CurrentSystemLanguage, nameof(BaseLanguage.TotalFloors))</label></h1>
        <select asp-for="TotalFloors" class="form-select">
            @for (int i = 0; i <= 100; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <br />
    </div>
    <div class="col-3">
        <h1 style="font-size:large"><label>@this.translateService.TranslateTo(CurrentSystemLanguage, nameof(BaseLanguage.TotalBedRooms))</label></h1>
        <select asp-for="TotalBedRooms" class="form-select">
            @for (int i = 0; i <= 15; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <br />
    </div>
    <div class="col-3">
        <h1 style="font-size:large"><label>@this.translateService.TranslateTo(CurrentSystemLanguage, nameof(BaseLanguage.TotalBathRooms))</label></h1>
        <select asp-for="TotalBathRooms" class="form-select">
            @for (int i = 0; i <= 15; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <br />
    </div>
    <div class="col-3">
        <h1 style="font-size:large"><label>@this.translateService.TranslateTo(CurrentSystemLanguage, nameof(BaseLanguage.TotalGarages))</label></h1>
        <select asp-for="TotalGarages" class="form-select">
            @for (int i = 0; i <= 15; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <br />
    </div>
</div>
