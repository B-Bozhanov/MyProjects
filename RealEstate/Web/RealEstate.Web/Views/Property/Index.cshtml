@{
    ViewData["Title"] = "Property";
}
<br />
<br />
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-4">
            <a class="btn btn-outline-success" asp-controller="Property" asp-action="Add" role="button">Add</a>
            <a class="btn btn-outline-success" asp-controller="Property" asp-action="Search" role="button">Search</a>
        </div>
    </div>
</div>

<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">Our Amazing Properties</h1>
                    <span class="color-text-a">Grid Properties</span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="property-grid grid">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="grid-option">
                    <a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a>
                    <form>
                        <select class="custom-select">
                            <option selected>All</option>
                            <option value="1">New to Old</option>
                            <option value="2">For Rent</option>
                            <option value="3">For Sale</option>
                        </select>
                    </form>
                </div>
            </div>
            @foreach (var property in Model.All)
            {
                <div class="col-md-4">
                    <div class="card-box-a card-shadow">
                        <div class="img-box-a">
                            <img src="@ImagePath/@property.ImageName" alt="" class="img-a img-fluid">
                        </div>
                        <div class="card-overlay">
                            <div class="card-overlay-a-content">
                                <div class="card-header-a">
                                    <h2 class="card-title-a">
                                        <a asp-controller="Property" asp-action="PropertySingle" asp-route-id="@property.Id">
                                            @property.PropertyTypeName
                                            <br /> @property.PopulatedPlace.LocationName
                                        </a>
                                    </h2>
                                </div>
                                <div class="card-body-a">
                                    <div class="price-box d-flex">
                                        <span class="price-a">@property.Option | @property.Price</span>
                                    </div>
                                    <a asp-controller="Property" asp-action="PropertySingle" asp-route-id="@property.Id" class="link-a">
                                        Click here to view
                                        <span class="bi bi-chevron-right"></span>
                                    </a>
                                </div>
                                <div class="card-footer-a">
                                    <ul class="card-info d-flex justify-content-around">
                                        <li>
                                            <h4 class="card-info-title">Area</h4>
                                            <span>
                                                @property.Size<span>m</span>
                                                <sup>2</sup>
                                            </span>
                                        </li>
                                        <li>
                                            <h4 class="card-info-title">Beds</h4>
                                            <span>@property.TotalBedRooms</span>
                                        </li>
                                        <li>
                                            <h4 class="card-info-title">Baths</h4>
                                            <span>@property.TotalBathRooms</span>
                                        </li>
                                        <li>
                                            <h4 class="card-info-title">Garages</h4>
                                            <span>@property.TotalGarages</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>