@using System.Globalization;
@using RealEstate.Services.Interfaces;
@using RealEstate.Services.TranslateService.Models;
@inject ITranslateService translateService;
@model PropertyIntroViewModel

@{
    ViewData["Title"] = "Home";
    var imagePath = string.Empty;
}

<div class="text-center">@translateService.TranslateTo(CurrentSystemLanguage, nameof(LanguageBase.TotalPropertiesCount)): @Model.GetAllCount</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="title-wrap d-flex justify-content-between">
            <div class="title-box">
                <h2 class="title-a">@translateService.TranslateTo(CurrentSystemLanguage, nameof(LanguageBase.NewestProperties))</h2>
            </div>
            <div class="title-link">
                <a asp-controller="Property" asp-action="Index">
                    @translateService.TranslateTo(CurrentSystemLanguage, nameof(LanguageBase.AllProperties))
                    <span class="bi bi-chevron-right"></span>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="intro intro-carousel swiper position-relative">
    <div class="swiper-wrapper">
        @foreach (var property in Model.Newest)
        {
            if (property.Images.Count != 0)
            {
                imagePath = $"{PropertyImagesPath}/{property.Images.First().Url}";
            }
            <div class="swiper-slide carousel-item-a intro-item bg-image" style="background-image: url(@imagePath)">
                <div class="overlay overlay-a"></div>
                <div class="intro-content display-table">
                    <div class="table-cell">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="intro-body">
                                        <p class="intro-title-top">
                                            @property.PopulatedPlace.Name, @property.PopulatedPlace.Location.Name
                                            <br> 78345
                                        </p>
                                        <h1 class="intro-title mb-4 ">
                                            <span class="color-b">@property.PropertyTypeName </span>
                                        </h1>
                                        <p class="intro-subtitle intro-price">
                                            <a asp-controller="Property" asp-action="PropertySingle" asp-route-id="@property.Id">
                                                <span class="price-a">@property.Option | @property.PriceFormat()</span></a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="swiper-pagination"></div>
</div>

<!-- ======= Latest Properties Section ======= -->
<section class="section-property section-t8">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title-wrap d-flex justify-content-between">
                    <div class="title-box">
                        <h2 class="title-a">@translateService.TranslateTo(CurrentSystemLanguage, nameof(LanguageBase.MostExpensiveProperties))</h2>
                    </div>
                    <div class="title-link">
                        <a asp-controller="Property" asp-action="Index"> @translateService.TranslateTo(CurrentSystemLanguage, nameof(LanguageBase.AllProperties))
                            <span class="bi bi-chevron-right"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div id="property-carousel" class="swiper">
            <div class="swiper-wrapper">
                @foreach (var property in Model.MostExpensive)
                {
                    <div class="carousel-item-b swiper-slide">
                        <div class="card-box-a card-shadow">
                            <div class="img-box-a">
                                <img src="@PropertyImagesPath/@property.Images.First().Url" alt="" class="img-a img-fluid">
                            </div>
                            <div class="card-overlay">
                                <div class="card-overlay-a-content">
                                    <div class="card-header-a">
                                        <h2 class="card-title-a">
                                            <a asp-controller="Property" asp-action="PropertySingle" asp-route-id="@property.Id">
                                                @property.PropertyTypeName
                                                <br /> @property.PopulatedPlace.Location.Name
                                            </a>
                                        </h2>
                                    </div>
                                    <div class="card-body-a">
                                        <div class="price-box d-flex">
                                            <span class="price-a">@property.Option | €@property.Price)</span>
                                        </div>
                                        <a asp-controller="Property" asp-action="PropertySingle" asp-route-id="@property.Id" class="link-a">
                                            Click here to view
                                            <span class="bi bi-chevron-right"></span>
                                        </a>
                                    </div>
                                    <div class="card-footer-a">
                                        <ul class="card-info d-flex justify-content-around">
                                            <li>
                                                <h4 class="card-info-title">Area</h4>
                                                <span>
                                                    @property.Size<span>m</span>
                                                    <sup>2</sup>
                                                </span>
                                            </li>
                                            <li>
                                                <h4 class="card-info-title">Beds</h4>
                                                <span>@property.TotalBedRooms</span>
                                            </li>
                                            <li>
                                                <h4 class="card-info-title">Baths</h4>
                                                <span>@property.TotalBathRooms</span>
                                            </li>
                                            <li>
                                                <h4 class="card-info-title">Garages</h4>
                                                <span>@property.TotalGarages</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End carousel item -->
                }
            </div>
        </div>
        <div class="propery-carousel-pagination carousel-pagination"></div>
    </div>
</section><!-- End Latest Properties Section -->
