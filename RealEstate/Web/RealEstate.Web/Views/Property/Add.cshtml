@model AddPropertyModel

@{
    ViewData["Title"] = "Add property";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-sm-12 offset-sm-3">
            <form class="form-group" method="post" enctype="multipart/form-data">
                <div class="title-box-d offset-4">
                    <h3 class="title-d"> @ViewData["Title"]</h3>
                </div>
                <div class="form-group">
                    <h1 style="font-size:large"><label asp-for="TypeId" class="form-label"></label></h1>
                    <select asp-for="TypeId" class="form-select">
                        <span asp-validation-for="TypeId" class="text-danger"></span>
                        @foreach (var type in Model.PropertyTypes)
                        {
                            <option value="@type.Id">@type.Name</option>
                        }
                    </select>
                </div>
                <br />
                <div class="form-group">
                    <h1 style="font-size:large"><label asp-for="RegionId"></label></h1>
                    <select asp-for="RegionId" class="form-select" id="region" placeholder="Select region...">
                        <span asp-validation-for="RegionId" class="text-danger"></span>
                        <option></option>
                        @foreach (var region in Model.RegionDownTown)
                        {
                            <option value="@region.Id">@region.Name</option>
                        }
                    </select>
                </div>
                <br />
                <div class="form-group">
                    <h1 style="font-size:large"><label asp-for="DistrictId" id="districtLabel"></label></h1>
                    <select asp-for="DistrictId" class="form-select" id="district" placeholder="Select district...">
                        <span asp-validation-for="DistrictId" class="text-danger"></span>
                        @* @foreach (var region in Model.Regions)
                        {
                        if (region.DownTown == null)
                        {
                        continue;
                        }

                        foreach (var district in region.DownTown.Districts)
                        {
                        <option value="@district.Id">@district.Name</option>
                        }
                        }*@
                    </select>
                </div>
                <div class="form-group">
                    <h1 style="font-size:large"><label asp-for="PlaceId" id="placeLabel"></label></h1>
                    <select asp-for="PlaceId" class="form-select" id="place" placeholder="Select place...">
                        <span asp-validation-for="PlaceId" class="text-danger"></span>
                        @*  @foreach (var region in Model.Regions)
                        {
                        foreach (var place in region.Places)
                        {
                        <option value="@place.Id">@place.Name</option>
                        }
                        }*@
                    </select>
                </div>
                <br />

                @*Details*@
                <h1 style="font-size:large">Detail info </h1>
                <br />
                <div class="row">
                    <div class="col-3">
                        <h1 style="font-size:large"><label asp-for="Size"></label></h1>
                        <input asp-for="Size" class="form-control" placeholder="Property size">
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <h1 style="font-size:large"><label asp-for="Floor"></label></h1>
                        <select asp-for="Floor" class="form-select">
                            @for (int i = 0; i <= 100; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="col-3">
                        <h1 style="font-size:large"><label asp-for="TotalFloors"></label></h1>
                        <select asp-for="TotalFloors" class="form-select">
                            @for (int i = 0; i <= 100; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="col-3">
                        <h1 style="font-size:large"><label asp-for="TotalBedRooms"></label></h1>
                        <select asp-for="TotalBedRooms" class="form-select">
                            @for (int i = 0; i <= 15; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="col-3">
                        <h1 style="font-size:large"><label asp-for="TotalBathRooms"></label></h1>
                        <select asp-for="TotalBathRooms" class="form-select">
                            @for (int i = 0; i <= 15; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="col-3">
                        <h1 style="font-size:large"><label asp-for="TotalGarages"></label></h1>
                        <select asp-for="TotalGarages" class="form-select">
                            @for (int i = 0; i <= 15; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                </div>

                <br />
                <br />

                @*Building types*@
                <h1 style="font-size:large">Building Type</h1>
                <div class="row">
                    @foreach (var buildingType in Model.BuildingTypes)
                    {
                        <div class="col">
                            <input type="checkbox" asp-for="@buildingType.IsChecked" class="form-check-input" />
                            <label class="form-check-label" asp-for="@buildingType.IsChecked">
                                @buildingType.Name
                            </label>
                            <input type="hidden" asp-for="@buildingType.Id" />
                            <input type="hidden" asp-for="@buildingType.Name" />
                        </div>
                    }
                    @*  @for (var i = 0; i < @Model.BuildingTypes.Count(); i++)
                    {
                    <div class="col">
                    <input type="checkbox" asp-for="@Model.BuildingTypes[i].IsChecked" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.BuildingTypes[i].IsChecked">
                    @Model.BuildingTypes[i].Name
                    </label>
                    <input type="hidden" asp-for="@Model.BuildingTypes[i].Id" />
                    <input type="hidden" asp-for="@Model.BuildingTypes[i].Name" />
                    </div>
                    }*@
                    <br />
                    <br />
                </div>
                <br />
                <br />

                @*Description*@
                <div class="form-group">
                    <h1 style="font-size:large"><label asp-for="Description"></label></h1>
                    <textarea class="form-control" asp-for="Description" rows="4" placeholder="More info..."></textarea>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <h1 style="font-size:large"><label asp-for="Option"></label></h1>
                    <div class="form-check-inline">
                        <input class="form-check-input" type="radio" name="Option" id="Option" value="sale" checked>
                        <label class="form-check-label">Sale</label>
                    </div>
                    <div class="form-check-inline">
                        <input class="form-check-input" type="radio" name="Option" id="Option" value="rent">
                        <label class="form-check-label">Rent</label>
                    </div>
                </div>
                <br />
                <div class="col-3">

                    @*Price*@
                    <h1 style="font-size:large"><label asp-for="Price"></label></h1>
                    <input asp-for="Price" class="form-control" placeholder="Set price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <br />

                @*Expiration Date*@
                <div class="col-3">
                    <h1 style="font-size:large"><label asp-for="ExpirationDays"></label></h1>
                    <select class="form-select" asp-for="ExpirationDays">
                        <option value="30">30 days</option>
                        <option value="60">60 days</option>
                        <option value="90">90 days</option>
                    </select>
                    <span asp-validation-for="ExpirationDays" class="text-danger"></span>
                </div>
                <br />

                @*Contacts*@

                <h1 style="font-size:large"><label asp-for="ContactModel"></label></h1>
                <div class="property-contact">
                    <div class="row">
                        <div class="col-md-12 mb-1">
                            <div class="form-group">
                                <input asp-for="ContactModel.Names" class="form-control form-control-lg form-control-a" id="inputName" placeholder="Name *" required="">
                            </div>
                        </div>
                        <div class="col-md-12 mb-1">
                            <div class="form-group">
                                <input type="email" asp-for="ContactModel.Email" class="form-control form-control-lg form-control-a" id="inputEmail1" placeholder="Email *" required="">
                            </div>
                        </div>
                        <div class="col-md-12 mb-1">
                            <div class="form-group">
                                <input class="form-control form-control-lg form-control-a" type="tel" asp-for="ContactModel.PhoneNumber" placeholder="Phone number" />
                            </div>
                        </div>
                        <span asp-validation-for="ContactModel" class="text-danger"></span>
                        <span asp-validation-for="ContactModel.Names" class="text-danger"></span>
                        <span asp-validation-for="ContactModel.Email" class="text-danger"></span>
                        <span asp-validation-for="ContactModel.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>


                @*Buttons*@
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <input type="file" class="a" name="images" multiple />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-b">Add</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        $('#downTown').attr('disabled', false);

        $(document).ready(function () {
            $("#districtLabel").hide();
        });
        $(document).ready(function () {
            $("#district").hide();
        });

        $(document).ready(function () {
            $("#placeLabel").hide();
        });
        $(document).ready(function () {
            $("#place").hide();
        });

        $('#region').change(function () {
            var id = $(this).val();
            console.log(id);
            $.ajax({

                type: 'POST',
                dataType: "JSON",
                url: '/Property/GetPlacesByRegionId',
                data: { id: id },
                success:
                    function (response) {
                        var markup;

                        for (var i = 0; i < response.data.length; i++) {

                            markup += " <option value=" + response.data[i].id + ">"+ response.data[i].name +"</option>";
                        }
                        markup += "<br />";
                        $("#district").html(markup);
                        $("#district").show();
                        $("#districtLabel").show();
                    },
                error:
                    function (response) {

                    }
            });
        });
    </script>
}

